#include <stdio.h>
 int main(){
 int n[10], i, par=0, impar=0;
 for(i=0; i<10; i++){
    printf("Digite um numero: \n");
    scanf("%d", &n[i]);
 }
for(i=0; i<10; i++){
	if(n[i]%2==0){
		par = par + n[i];
	}
}
for(i=0; i<10; i++){
	if(n[i%3==0]){
		impar = impar + n[i];
	}
}
		printf("\nSoma dos elementos pares: %d\n", par);
		printf("\nSoma dos elementos impares: %d\n", impar);

return 0;
 }
